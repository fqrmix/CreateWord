Private Sub UserForm_Initialize()
    With Me.ComboBox1
        .ControlTipText = "Âûáåðèòå çíà÷åíèå èç ñïèñêà"
        .List = Array("Ïëàò¸æ óñïåøåí 257", "Ïëàò¸æ óñïåøåí êàðòà", "Ïëàò¸æ óñïåøåí èíâîéñèíã", "Ïëàò¸æ óñïåøåí ÑÁÏ", "Ïëàò¸æ óñïåøåí ÑÁÏ íàø ÊÀ", "Ïëàò¸æ óñïåøåí êîøåëåê", "Ïëàò¸æ óñïåøåí ÞCard", "Ïëàò¸æ óñïåøåí ñ ìîáèëüíîãî")
