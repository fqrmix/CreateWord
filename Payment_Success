Private Sub ComboBox1_Change()

Dim Default_Value As String
Default_Value = "Çàïîëíåíèå íå òðåáóåòñÿ"
        
    Select Case ComboBox1.Text
    
        Case Is = "Ïëàò¸æ óñïåøåí êàðòà"
            KA_Value.Enabled = True
            KA_Value.Text = ""
            ID_Value.Enabled = True
            ID_Value.Text = ""
            Payment_ID.Enabled = True
            Payment_ID.Text = ""
            Order_Number.Enabled = False
            Order_Number.Text = Default_Value
            Auth_Code.Enabled = True
            Auth_Code.Text = ""
            RRN.Enabled = True
            RRN.Text = ""
            Date_Value.Enabled = True
            Date_Value.Text = ""
            
        Case Is = "Ïëàò¸æ óñïåøåí èíâîéñèíã"
            KA_Value.Enabled = True
            KA_Value.Text = ""
            ID_Value.Enabled = True
            ID_Value.Text = ""
            Payment_ID.Enabled = True
            Payment_ID.Text = ""
            Order_Number.Enabled = True
            Order_Number.Text = ""
            Auth_Code.Enabled = False
            Auth_Code.Text = Default_Value
            RRN.Enabled = False
            RRN.Text = Default_Value
            Date_Value.Enabled = True
            Date_Value.Text = ""
            
        Case Is = "Ïëàò¸æ óñïåøåí ÑÁÏ"
            KA_Value.Enabled = False
            KA_Value.Text = Default_Value
            ID_Value.Enabled = False
            ID_Value.Text = Default_Value
            Payment_ID.Enabled = True
            Payment_ID.Text = ""
            Order_Number.Enabled = True
            Order_Number.Text = ""
            Auth_Code.Enabled = False
            Auth_Code.Text = Default_Value
            RRN.Enabled = False
            RRN.Text = Default_Value
            Date_Value.Enabled = True
            Date_Value.Text = ""
            
        Case Is = "Ïëàò¸æ óñïåøåí ÑÁÏ íàø ÊÀ"
            KA_Value.Enabled = True
            KA_Value.Text = ""
            ID_Value.Enabled = False
            ID_Value.Text = Default_Value
            Payment_ID.Enabled = True
            Payment_ID.Text = ""
            Order_Number.Enabled = True
            Order_Number.Text = ""
            Auth_Code.Enabled = False
            Auth_Code.Text = Default_Value
            RRN.Enabled = False
            RRN.Text = Default_Value
            Date_Value.Enabled = True
            Date_Value.Text = ""
            
        Case Is = "Ïëàò¸æ óñïåøåí êîøåëåê"
            KA_Value.Enabled = True
            KA_Value.Text = ""
            ID_Value.Enabled = True
            ID_Value.Text = ""
            Payment_ID.Enabled = True
